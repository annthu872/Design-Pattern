                  <VBox alignment="CENTER" prefWidth="330.0" BorderPane.alignment="CENTER">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="normal-label" text="Select User Table for Authentication">
                           <font>
                              <Font name="Arial" size="60.0" />
                           </font>
                        </Text>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="normal-label" text="Reset your password and rejoin us!">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Text>
                     </children>
                  </VBox>
               </top>
               <center>
                  <BorderPane BorderPane.alignment="CENTER_RIGHT">
